<div class="display-form">
  <%= form_with url: create_user_path, html: {class: "form-horizontal text-center", id: "new_user"} do |f| %>

    <div class="form-group">
      <%= f.label :email, class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.email_field :email, placeholder: I18n.t("app.enter_email"), size: 30, class: "form-control form-text-field", name: 'user[email]' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :first_name, class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.text_field :first_name, placeholder: I18n.t("app.enter_first_name"), size: 30, class: "form-control form-text-field", name: 'user[first_name]' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :last_name, class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.text_field :last_name, placeholder: I18n.t("app.enter_last_name"), size: 30, class: "form-control form-text-field", name: 'user[last_name]' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :amount, class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.text_field :amount, placeholder: I18n.t("app.enter_amount"), size: 10, class: "form-control form-text-field", name: 'user[amount]' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit I18n.t("app.create"), class: "btn btn-primary create-user" %>
      </div>
    </div>

  <% end %>

</div>
